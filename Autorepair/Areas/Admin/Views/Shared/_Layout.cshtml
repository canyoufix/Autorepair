<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Autorepair</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Autorepair.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="button-custom-home" asp-area="Admin" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>

                        <li class="nav-item">
                            <a class="button-custom-big" asp-area="Admin" asp-controller="Orders" asp-action="Index">Информация о ремонте</a>
                        </li>

                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="Cars" asp-action="Index">Авто</a>
                        </li>

                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="Clients" asp-action="Index">Клиенты</a>
                        </li>

                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="Employees" asp-action="Index">Сотрудники</a>
                        </li>


                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="Parts" asp-action="Index">Услуги</a>
                        </li>


                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="Services" asp-action="Index">Выполненные задачи</a>
                        </li>

                        <li class="nav-item">
                            <a class="button-custom" asp-area="Admin" asp-controller="XML" asp-action="Index">XML</a>
                        </li>

                    </ul>

                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form asp-area="" asp-action="Logout" asp-controller="Account" method="post">
                                    <button type="submit" class="btn btn-danger">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a href="/Account/Login">Login</a></li>
                        }

                    </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ООО "Автосервис 12 ТАНГО" - <a asp-area="Admin" asp-controller="Home" asp-action="NDA">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

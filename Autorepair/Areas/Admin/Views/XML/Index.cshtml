@{
    ViewData["Title"] = "Index";
}

<h1>Экпорт / Иморт базы данных в XML</h1>

<div class="row">
    <div class="col-md-4">

        <form asp-area="Admin" asp-controller="XML" asp-action="Export">
            <br>
            <div class="form-group">
                <input type="submit" value="Export" class="btn btn-success" />
            </div>
            <br>
        </form>

        <form asp-area="Admin" asp-controller="XML" asp-action="Import">
            <div class="form-group">
                <input type="submit" value="Import" class="btn btn-dark" />
            </div>
            <br>
        </form>

        <form asp-area="Admin" asp-controller="XML" asp-action="DropTable">
            <div class="form-group">
                <input type="submit" value="Clear ALL TABLES" class="btn btn-danger" />
            </div>
            <br>
        </form>

    </div>
</div>